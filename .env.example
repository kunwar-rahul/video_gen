# Copy this file to .env and fill in the required values

# Pexels API Configuration (required for asset retrieval)
PEXELS_API_KEY=your_pexels_api_key_here

# Storage Configuration
STORAGE_URL=http://minio:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=video-assets
STORAGE_REGION=us-east-1

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu  # Change to 'cuda' for GPU support
WHISPER_LANGUAGE_DETECTION=true

# TTS Configuration
TTS_ENGINE=gtts  # Options: gtts, azure, aws
TTS_LANGUAGE=en
TTS_VOICE=en-US-neutral

# FFmpeg Configuration
FFMPEG_PRESET=medium  # Options: ultrafast, fast, medium, slow
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
VIDEO_BITRATE=5000k
AUDIO_BITRATE=192k
TARGET_FPS=30
TARGET_RESOLUTION=1920x1080

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Service URLs
ORCHESTRATOR_URL=http://orchestrator:8081
RETRIEVER_URL=http://retriever:8082
WHISPER_URL=http://whisper:8083
RENDERER_URL=http://renderer:8084

# Job Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=3600
MAX_RETRIES=3
RETRY_DELAY=5

# Feature Flags
ENABLE_STYLE_TRANSFER=false
ENABLE_WEBHOOKS=true
WEBHOOK_TIMEOUT=30

# Caching
JOB_CACHE_ENABLED=true
JOB_CACHE_TTL=86400
ASSET_CACHE_ENABLED=true
ASSET_CACHE_SIZE_MB=1000

# Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true
TRACE_SAMPLE_RATE=0.1

# Redis
REDIS_URL=redis://redis:6379/0
